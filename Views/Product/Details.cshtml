@model ComGa.Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <link rel="stylesheet" href="/css/Product_Detail.css">

<form asp-action="addToCart" method="post" asp-controller="Product" class="container mt-5 mb-5">
    <div class="row d-flex justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="row">
                    <div class="col-md-6">
                        <div class="images p-3">
                            <div class="text-center p-4"> 
                                <img id="main-image" src="@Html.DisplayFor(i => Model.ThumbnailPhotoPath)" width="250" /> 
                            </div>
                                <div class="thumbnail text-center"> 
                                    @if(Model.Photos != null) {
                                        @foreach (var item in Model.Photos) {
                                            <img onclick="change_image(this)" src="@Html.DisplayFor(i => item.ImgPath)" width="70"> 
                                            @* <img onclick="change_image(this)" src="https://i.imgur.com/Dhebu4F.jpg" width="70">  *@
                                        }
                                    }
                                </div>  
                            @* <div class="thumbnail text-center"> <img onclick="change_image(this)" src="https://i.imgur.com/Rx7uKd0.jpg" width="70"> <img onclick="change_image(this)" src="https://i.imgur.com/Dhebu4F.jpg" width="70"> </div> *@
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="product p-4">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center"> <i class="fa fa-long-arrow-left"></i> <span class="ml-1">Back</span> </div> <i class="fa fa-shopping-cart text-muted"></i>
                            </div>
                            <div class="mt-4 mb-3"> <span class="text-uppercase text-muted brand">Orianz</span>
                                <h5 class="text-uppercase">@Html.DisplayFor(item => Model.ProductName)</h5>
                                <div class="price d-flex flex-row align-items-center"> <span class="act-price">@Html.DisplayFor(item => Model.Price) VND</span>
                                    @* <div class="ml-2"> <small class="dis-price">@Html.DisplayFor(item => Model.Price)</small> <span>40% OFF</span> </div> *@
                                </div>
                            </div>
                            <p class="about">@Html.DisplayFor(i => Model.Description)</p>
                            <div class="sizes mt-5">
                                @* <h6 class="text-uppercase">Size</h6> <label class="radio"> <input type="radio" name="size" value="S" checked> <span>S</span> </label> <label class="radio"> <input type="radio" name="size" value="M"> <span>M</span> </label> <label class="radio"> <input type="radio" name="size" value="L"> <span>L</span> </label> <label class="radio"> <input type="radio" name="size" value="XL"> <span>XL</span> </label> <label class="radio"> <input type="radio" name="size" value="XXL"> <span>XXL</span> </label> *@
                                <h6 class="text-uppercase">Size: @Model.size</h6> 
                            </div>
                            <div class="cart mt-4 align-items-center">
                                <button type="submit" class="btn btn-danger text-uppercase mr-2 px-4">Add to cart</button> 
                                <i class="fa fa-heart text-muted"></i> <i class="fa fa-share-alt text-muted"></i> 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>